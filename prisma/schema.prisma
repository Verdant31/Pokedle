// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model DailyPokemon {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  pokemonId  Int
  name       String
  lastUpdate DateTime
}

model DailyHits {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  hits Int
}
